# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)

GET     /employees                  controllers.EmployeeController.getEmployees
GET     /employee/:id               controllers.EmployeeController.getEmployee(id:Integer)
POST    /employee/:id               controllers.EmployeeController.updateEmployee(id:Integer)
GET     /searchemployees            controllers.EmployeeController.searchEmployees
GET     /addemployee                controllers.EmployeeController.newEmployee
POST    /addemployee                controllers.EmployeeController.addEmployee

GET     /products                   controllers.ProductController.getProducts
GET     /product/:id                controllers.ProductController.getProduct(id:Integer)
POST    /product/:id                controllers.ProductController.updateProduct(id:Integer)
GET     /searchproducts             controllers.ProductController.searchProducts
GET     /addproduct                 controllers.ProductController.newProduct
POST    /addproduct                 controllers.ProductController.addProduct