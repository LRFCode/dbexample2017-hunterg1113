# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

GET     /                               controllers.LoginController.getLogin

GET     /login                          controllers.LoginController.getLogin
POST    /login                          controllers.LoginController.postLogin

GET     /crewClockIn/:id                controllers.ForemanController.getClockInScreen(id: Integer)
POST    /foremanWelcome/:id             controllers.ForemanController.getWelcomeScreen(id : Integer)
GET     /crewClockOut/:id               controllers.ForemanController.getClockOutScreen(id: Integer)

GET     /projectManagerWelcome/:id      controllers.ProjectManagerController.getWelcomeScreen(id : Integer)

GET     /generateDb                     controllers.DbGeneratorController.generateDb

GET     /assets/*file                   controllers.Assets.versioned(path="/public", file: Asset)

